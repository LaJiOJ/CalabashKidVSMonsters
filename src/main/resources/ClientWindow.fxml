<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="180.0" prefWidth="300.0"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main.java.nju.linhao.controller.window.ClientWindowController">
   <children>
      <VBox layoutX="-1.0" layoutY="-1.0" prefHeight="180.0" prefWidth="300.0" spacing="25.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label prefHeight="26.0" prefWidth="73.0" text="选择游戏房间" />
                  <ChoiceBox fx:id="serverChoiceBox" onMouseClicked="#serverChoiceBoxOnClicked" prefHeight="27.0" prefWidth="164.0" />
               </children>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label prefHeight="28.0" prefWidth="72.0" text="选择你的角色" />
                  <RadioButton fx:id="humanRadioButton" mnemonicParsing="false" onMouseClicked="#humanRadioButtonOnClicked" prefHeight="32.0" prefWidth="69.0" text="人类阵营" />
                  <RadioButton fx:id="monsterRadioButton" mnemonicParsing="false" onMouseClicked="#monsterRadioButtonOnClicked" prefHeight="28.0" prefWidth="69.0" text="妖怪阵营" />
               </children>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="210.0" spacing="50.0">
               <children>
                  <Button fx:id="readyToFightButton" mnemonicParsing="false" onMouseClicked="#readyToFightButtonOnClicked" prefHeight="31.0" prefWidth="76.0" text="准备战斗！" />
                  <Button fx:id="returnToMainWindow" mnemonicParsing="false" onMouseClicked="#returnToMainWindowOnClicked" prefHeight="33.0" prefWidth="76.0" text="返回主界面" />
               </children>
               <VBox.margin>
                  <Insets left="45.0" right="45.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="25.0" top="25.0" />
         </padding>
      </VBox>
   </children>
</Pane>
